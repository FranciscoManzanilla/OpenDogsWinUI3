<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="OpenDogs.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d"
    Title="OpenDogs">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- ðŸ”· Custom TitleBar -->
        <Grid Grid.Row="0" x:Name="AppTitleBar"
              Height="36"
              Background="#FF202020"
              VerticalAlignment="Top"
              Padding="8,0"
              >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icono -->
            <Image Grid.Column="0" Source="/Assets/logo.png"
                   Width="16" Height="16"
                   VerticalAlignment="Center"
                   Margin="0,0,6,0"/>

            <!-- TÃ­tulo -->
            <TextBlock Grid.Column="1" Text="OpenDogs"
                       FontSize="14"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"/>

        </Grid>
        <muxc:NavigationView Grid.Row="1" x:Name="nvSample" SelectionChanged="nvSample_SelectionChanged">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Icon="Folder" Content="Explorer" Tag="WatchEx" />
                <muxc:NavigationViewItem Icon="Camera" Content="Texture Viewer" Tag="WatchText" />
                <muxc:NavigationViewItem Icon="Import" Content="Mod Creator" Tag="WatchMod" />
                <muxc:NavigationViewItem Icon="Download" Content="Mod Manager" Tag="WatchManager" />
            </muxc:NavigationView.MenuItems>

            <Frame x:Name="contentFrame"/>
        </muxc:NavigationView>
    </Grid>

</Window>
